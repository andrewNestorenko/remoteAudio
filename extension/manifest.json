{
    "manifest_version": 2,

    "name": "Remote audio streamer",
    "description": "Play music remotely",
    "version": "0.0.1",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "http://vk.com/",
        "http://remote.nestorenko.info/"
    ],
    "content_scripts": [
        {
            "matches": ["http://vk.com/*"],
            "js": ["main.js"],
            "run_at": "document_start"
        }
    ]
}
